{
	"compilerOptions": {
		"target": "es6",
		"lib": [ "es6" ],
		"module": "commonjs",
    "moduleResolution": "node",
		"outDir": "out",
		"sourceMap": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"pretty": true,
		"types": ["diff", "mocha", "node", "sax", "xml2js"],
		"composite": true,
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": [
		"node_modules"
	]
}